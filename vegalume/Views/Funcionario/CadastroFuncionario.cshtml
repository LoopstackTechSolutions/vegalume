<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vegalume - Cadastro</title>
    <link rel="stylesheet" href="~/cadastrofuncionario/cadastro-funcionario.css">
    <link rel="stylesheet" href="~/shared.css">
</head>

<body>
    <button onclick="window.history.back()" class="white-green-btn" id="voltar">Voltar</button>

    <form id="frm-cadastro" asp-controller="Funcionario" asp-action="CadastrarFuncionario">
        <p>Cadastro de Funcionário</p>
        <div id="textboxes">
            <div>
                <label>Nome </label>
                <input type="text" id="txtNome" name="nome" required maxlength="50" placeholder="João Vieira">
            </div>
            <div>
                <label>Email </label>
                <input type="text" id="txtEmail" name="email" required maxlength="50" placeholder="joao.vieira@gmail.com">
            </div>
            <div>
                <label>Senha </label>
                <input type="password" id="txtSenha" name="senha" required maxlength="30" placeholder="••••••••">
            </div>
            <div>
                <label>Telefone </label>
                <input type="text" id="txtTelefone" name="telefone" class="numerico telefone phone-mask"
                       required maxlength="15" placeholder="(00)00000-0000">
            </div>
        </div>
        <div id="botoes">
            <input type="submit" class="white-green-btn" id="entrar" value="Entrar" />
            <input type="reset" class="white-green-btn" id="limpar" value="Limpar" />
        </div>
    </form>

    <script src="~/cadastrofuncionario/cadastro-funcionario.js"></script>
</body>